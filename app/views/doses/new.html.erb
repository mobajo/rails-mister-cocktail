<div class="row">
  <div class="col-sm-offset-2 col-xs-5">
    <ol class="list-inline" id="breadcrumb">
      <%= render_breadcrumbs :tag => :li, :separator => "<i class=\"fa fa-long-arrow-right\" aria-hidden=\"true\"></i>" %>
    </ol>
    <h3>Add ingredient</h3>
    <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.submit "Add", class: "btn btn-danger" %>
    <% end %>
  </div>
</div>